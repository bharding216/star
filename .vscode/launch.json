{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Star App",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1",
                "CLIENT_NAME": "star",
                "PORT": "2000"
            },
            "envFile": "${workspaceFolder}/.env.star",
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0",
                "--port=2000"
            ],
            "jinja": true,
            "autoStartBrowser": false,
            "justMyCode": true
        },
        {
            "name": "SE Legacy App",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1",
                "CLIENT_NAME": "se_legacy",
                "PORT": "2001"
            },
            "envFile": "${workspaceFolder}/.env.se_legacy",
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0",
                "--port=2001"
            ],
            "jinja": true,
            "autoStartBrowser": false,
            "justMyCode": true
        }
    ]
}